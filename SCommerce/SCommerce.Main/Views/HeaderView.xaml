<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="SCommerce.Main.Views.HeaderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:SCommerce.Main.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SCommerce.Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <CommandBar
        VerticalContentAlignment="Stretch"
        IsOpen="True"
        IsSticky="True">
        <CommandBar.Content>
            <TextBlock
                Margin="20,0"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Black"
                Foreground="DarkSlateBlue"
                Text="SCommmerce" />
        </CommandBar.Content>
        <controls:BadgeAppBarButton
            Badge="{x:Bind ViewModel.CardQuantity, Mode=OneWay}"
            Click="{x:Bind ViewModel.CardPageNavigation}"
            Icon="Shop"
            Label="Cart"
            Style="{ThemeResource BadgeAppBarButton}" />
    </CommandBar>
</UserControl>