<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="SCommerce.Main.Views.ProductDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SCommerce.Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.ColumnSpan="2"
            Margin="0,0,0,30"
            FontSize="50"
            FontWeight="SemiBold"
            Foreground="#333333"
            Text="Name of my product"
            TextWrapping="Wrap" />
        <StackPanel
            Grid.Row="1"
            Margin="0,0,20,0"
            Spacing="10">
            <Border
                Width="200"
                Height="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                CornerRadius="30">
                <Image Source="/Assets/Images/product2.png" Stretch="UniformToFill" />
            </Border>
            <StackPanel Orientation="Horizontal" Spacing="20">
                <Border
                    Width="100"
                    Height="100"
                    CornerRadius="15">
                    <Image Source="/Assets/Images/product1.png" Stretch="Uniform" />
                </Border>
                <Border
                    Width="100"
                    Height="100"
                    CornerRadius="15">
                    <Image Source="/Assets/Images/product2.png" Stretch="Uniform" />
                </Border>
                <Border
                    Width="100"
                    Height="100"
                    CornerRadius="15">
                    <Image Source="/Assets/Images/product2.png" Stretch="Uniform" />
                </Border>
                <Border
                    Width="100"
                    Height="100"
                    CornerRadius="15">
                    <Image Source="/Assets/Images/product2.png" Stretch="Uniform" />
                </Border>
            </StackPanel>
            <TextBlock
                FontSize="28"
                FontWeight="SemiBold"
                Text="R$ 90,00" />
            <Button Content="Add to Card" />
        </StackPanel>
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            FontSize="20"
            Foreground="#666666"
            Text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose (injected humour and the like)."
            TextAlignment="Justify"
            TextWrapping="Wrap" />
    </Grid>
</Page>