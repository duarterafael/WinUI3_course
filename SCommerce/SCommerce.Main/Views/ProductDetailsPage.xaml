<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="SCommerce.Main.Views.ProductDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:SCommerce.Main.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SCommerce.Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:DoubleToCurrencyFormatConverter x:Key="CurrencyConverter" />
    </Page.Resources>

    <Page.TopAppBar>
        <CommandBar
            VerticalContentAlignment="Stretch"
            IsOpen="True"
            IsSticky="True">
            <CommandBar.Content>
                <TextBlock
                    Margin="20,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Black"
                    Foreground="DarkSlateBlue"
                    Text="SCommmerce" />
            </CommandBar.Content>
            <AppBarButton Icon="Shop" Label="Cart" />
        </CommandBar>
    </Page.TopAppBar>

    <ScrollViewer>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.ColumnSpan="2"
                Margin="0,0,0,30"
                FontSize="50"
                FontWeight="SemiBold"
                Foreground="#333333"
                Text="{x:Bind ViewModel.Title}"
                TextWrapping="Wrap" />
            <StackPanel
                Grid.Row="1"
                Margin="0,0,20,0"
                Spacing="10">
                <Border
                    Width="200"
                    Height="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    CornerRadius="30">
                    <Image Source="{x:Bind ViewModel.SelectedImage}" Stretch="UniformToFill" />
                </Border>
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <Border
                        Width="100"
                        Height="100"
                        CornerRadius="15">
                        <Image Source="/Assets/Images/product1.png" Stretch="Uniform" />
                    </Border>
                    <Border
                        Width="100"
                        Height="100"
                        CornerRadius="15">
                        <Image Source="/Assets/Images/product2.png" Stretch="Uniform" />
                    </Border>
                    <Border
                        Width="100"
                        Height="100"
                        CornerRadius="15">
                        <Image Source="/Assets/Images/product2.png" Stretch="Uniform" />
                    </Border>
                    <Border
                        Width="100"
                        Height="100"
                        CornerRadius="15">
                        <Image Source="/Assets/Images/product2.png" Stretch="Uniform" />
                    </Border>
                </StackPanel>
                <TextBlock FontSize="28" FontWeight="SemiBold">
                    <Run Text="R$" />
                    <Run Text="{x:Bind ViewModel.Price, Converter={StaticResource CurrencyConverter}}" />
                </TextBlock>

                <Button Content="Add to Card" />
            </StackPanel>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                FontSize="20"
                Foreground="#666666"
                Text="{x:Bind ViewModel.Description}"
                TextAlignment="Justify"
                TextWrapping="Wrap" />
        </Grid>
    </ScrollViewer>
</Page>